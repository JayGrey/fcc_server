{
  "compilerOptions": {
    "module": "commonjs",
    // "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "lib": ["es2015"]
  },
  "include": ["./src/**/*"]
}
